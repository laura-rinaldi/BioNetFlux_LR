{
    "python.testing.pytestArgs": [
        "tests",
        "-v",
        "--tb=short"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "python.defaultInterpreterPath": "/opt/anaconda3/bin/python",
    "python.terminal.activateEnvironment": true,
    "python.analysis.extraPaths": ["./src"],
    "python.testing.cwd": "${workspaceFolder}",
    "python.testing.debugPort": 3000,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },
    "python.testing.promptToConfigure": false,
    "testing.automaticallyOpenPeekView": "never",
    "testing.openTesting": "openOnTestStart",
    "testing.alwaysRevealTestOnStateChange": true,
    "testing.followRunningTest": true,
    "testing.autoRun.mode": "all",
    "python.testing.runAllTestsOnStartup": true,
    "testing.automaticallyOpenTestResults": "openOnTestStart"
}